package pageObjects;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;
import org.openqa.selenium.support.PageFactory;

public class NavigateToHome {
	@FindBy(xpath="//div[text()='My Naukri']")
	private WebElement MyNaukriLink; 
	@FindBy(linkText="Edit Profile")
	private WebElement editProfileLink;
	@FindBy(xpath="//div[@class='uploadCont'] //div[@class='uploadContainer']")
	private WebElement updateResume;
	
	public NavigateToHome(WebDriver driver)
	{
		PageFactory.initElements(driver, this);
	}
	
	public void editProfile()
	{
		editProfileLink.click();
	}
	
	public void updateResume()

	{
		updateResume.click();
	}
	
	public WebElement myNaukriLink()
	{
		return MyNaukriLink;
	}
}
